<div class="fieldset persons" metal:define-macro="persons">
<!--
-->
  <div class="field" class="reporter">
    <div class="name">
    Reporter:
    </div>
    <div class="value" tal:content="context/Creator">
      Reporter
    </div>
  </div>
  <div class="field" class="responsibles">
    <div class="name">
    Responsibles:
    </div>
    <div class="value" tal:define="responsibles context/Contributors">
      <tal:tal tal:repeat="responsible responsibles">
        <span tal:replace="responsible">
          Responsible
        </span>
      </tal:tal>
    </div>
  </div>
  <div class="field" class="watchers">
    <div class="name">
    Watchers:
    </div>
    <div class="value" tal:define="watchers python:context.Rights().split(' ')">
      <tal:tal tal:repeat="watcher watchers">
        <span tal:replace="watcher">
          Watcher
        </span>
      </tal:tal>
    </div>
  </div>
</div>
