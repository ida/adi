<div class="fieldset persons" metal:define-macro="persons"><div
  class="field responsibles">
    <div class="name" tal:content="string:Responsibles">
Responsibles:
    </div><div 
    class="value" tal:define="persons context/Creators"><span
      tal:repeat="person persons" tal:content="person">
A creator
      </span>
    </div>
  </div><div
    class="field contributors">
    <div class="name" tal:content="string:Contributors">
Contributors:
    </div><div 
    class="value" tal:define="persons context/Contributors"><span
      tal:repeat="person persons" tal:content="person">
A contributor
      </span>
    </div>
  </div><div
    class="field reporter">
    <div class="name" tal:content="string:Reporter">
Reporter:
    </div><div 
    class="value" tal:content="string:owner">
The owner
    </div>
  </div><div
  class="field watchers"
    tal:define="persons context/Rights;
          persons python: persons.split()">
    <div class="name" tal:content="string:Watchers">
Watchers:
    </div><div tal:condition="python:persons != []"
      class="value"><span
        tal:repeat="person persons" tal:content="person">
A right
      </span></div></div></div>
